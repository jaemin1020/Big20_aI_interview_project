# Backend Core Environment Variables
# Copy this file to .env and fill in your actual values

# Deepgram API Key (Required for Speech-to-Text)
# Get your API key from: https://console.deepgram.com/
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# Database Configuration
DATABASE_URL=postgresql://user:password@postgres:5432/ai_interview

# CORS Settings (comma-separated)
# Add all frontend URLs that need to access the backend
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# JWT Secret Key (use a strong random string)
SECRET_KEY=your_jwt_secret_key_here_change_this_in_production

# Optional: Redis Configuration
REDIS_URL=redis://redis:6379/0

# Optional: Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
